{
  "customSyntax": "postcss-scss",
  "extends": [
    "stylelint-config-standard",
    "stylelint-config-standard-scss"
  ],
  "ignoreFiles": [
    "public/**/*"
  ],
  "rules": {
    "selector-class-pattern": "^[a-z][a-zA-Z0-9]+$",
    "keyframes-name-pattern": "^[a-z][a-zA-Z0-9]+$"
  },
  "plugins": [
    "stylelint-order"
  ]
}